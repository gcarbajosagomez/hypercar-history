<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
		 				http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.pagani-history</groupId>
	<artifactId>pagani-history-web</artifactId>
	<version>1.0.62</version>
	<packaging>war</packaging>
	<name>Pagani History Web</name>
	<developers>
		<developer>
			<name>Gonzalo Carbajosa GÃ³mez</name>
			<url>https://es.linkedin.com/in/gonzalocarbajosagomez</url>
		</developer>
	</developers>
	<inceptionYear>2014</inceptionYear>	

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<project.run.mainClass>com.phistory.Main</project.run.mainClass>
		
		<java.source.version>1.8</java.source.version>
		<maven.compiler.plugin.version>3.1</maven.compiler.plugin.version>
		<maven.war.plugin.version>2.3</maven.war.plugin.version>
		<maven.clean.plugin.version>2.5</maven.clean.plugin.version>	
		<maven.exec-maven-plugin.version>1.4.0</maven.exec-maven-plugin.version>	
		<maven-shade-plugin.version>2.4.1</maven-shade-plugin.version>
		
		<javax.ee.version>7.0</javax.ee.version>
		<com.thecarpedia.data.version>1.2.12</com.thecarpedia.data.version>
		<com.fasterxml.jackson.core.version>2.6.1</com.fasterxml.jackson.core.version>
		<org.springframework.version>4.2.0.RELEASE</org.springframework.version>
		<org.springsecurity.version>4.0.2.RELEASE</org.springsecurity.version>
		<org.spring-boot.version>1.2.7.RELEASE</org.spring-boot.version>
		<org.freemarker.version>2.3.23</org.freemarker.version>	
		<commons.collection.version>3.2.1</commons.collection.version>
		<mysql.connector.version>5.1.36</mysql.connector.version>	
	</properties>

	<build>
		<finalName>${project.name}-${project.version}</finalName>		
		<resources>
   		 	<resource>        		
        		<directory>src/main/resources</directory>
    		</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven.compiler.plugin.version}</version>
				<executions>
					<execution>
						<goals>
							<goal>compile</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<source>${java.source.version}</source>
					<target>${java.source.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>${maven.war.plugin.version}</version>
				<configuration>
					<failOnMissingWebXml>false</failOnMissingWebXml>
					<outputDirectory>deployments</outputDirectory>
					<packagingExcludes>WEB-INF/lib/*-javadoc.jar</packagingExcludes>
					<warName>ROOT</warName>
					<webResources>
						<resource>
              				<!-- this is relative to the pom.xml directory -->
              				<directory>src/main/webapp/resources</directory>
            			</resource>            			
					</webResources>
				</configuration>
			</plugin>
			<plugin>
            	<groupId>org.codehaus.mojo</groupId>
            	<artifactId>exec-maven-plugin</artifactId>
            	<version>${maven.exec-maven-plugin.version}</version>
            	<configuration>
                	<mainClass>${project.run.mainClass}</mainClass>
            	</configuration>
        	</plugin>
			<plugin>
				<artifactId>maven-clean-plugin</artifactId>
				<version>${maven.clean.plugin.version}</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>deployments</directory>
							<includes>
								<include>*.war</include>
								<followSymlinks>false</followSymlinks>
							</includes>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<profiles>
  		<profile>
    		<id>dev</id>
    		<activation>
      			<activeByDefault>true</activeByDefault>
    		</activation>
    		<build>
            	<resources>
                	<resource>
                    	<directory>src/main/resources/com/phistory/systemproperty/dev</directory>
                    	<targetPath>com/phistory/systemproperty</targetPath>
                	</resource>
            	</resources>
        	</build>
 		</profile>
 		<profile>
    		<id>prod</id>
    		<build>
            	<resources>
                	<resource>
                    	<directory>src/main/resources/com/phistory/systemproperty/prod</directory>
                    	<targetPath>com/phistory/systemproperty</targetPath>
                	</resource>
            	</resources>
        	</build>
  		</profile>
	</profiles>

